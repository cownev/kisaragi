#!/bin/bash

export TZ='Asia/Tokyo'
echo "set \"$TZ\" as Timezone"

# valiable for hubot start up
export PORT=$OPENSHIFT_NODEJS_PORT
export BIND_ADDRESS=$OPENSHIFT_NODEJS_IP
export HEROKU_URL=http://$OPENSHIFT_APP_DNS
export REDIS_URL=redis://:$REDIS_PASSWORD@$OPENSHIFT_REDIS_HOST:$OPENSHIFT_REDIS_PORT
export HUBOT_HEROKU_KEEPALIVE_INTERVAL=5
export MONGODB_URL=$OPENSHIFT_MONGODB_DB_URL$OPENSHIFT_APP_NAME
